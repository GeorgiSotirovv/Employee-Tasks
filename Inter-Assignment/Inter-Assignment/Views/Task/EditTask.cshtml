@model TaskViewModel

@{
    ViewBag.Title = "Edit Task";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="EditTask" method="post">

            <div hidden>
                <input asp-for="@Model.Id" class="form-control" aria-required="true" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" placeholder="" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" placeholder="" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DueDate" class="form-label">DueDate</label>
                <input asp-for="@Model.DueDate" class="form-control" aria-required="true" placeholder="" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EmployeId" class="form-label">Employees</label>
                <select asp-for="@Model.EmployeId" class="form-control">
                    @foreach (var type in Model.Employees)
                    {
                        <option value="@type.Id">@type.FullName</option>
                    }
                </select>
                <span asp-validation-for="EmployeId" class="text-danger"></span>
            </div>

            <label class="form-label">Is task completed</label>
            <select id='IsCompletedId' name='IsCompletedId'>
                <option value='1'>Yes</option>
                <option value='0'>No</option>
            </select>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="EditTask" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
