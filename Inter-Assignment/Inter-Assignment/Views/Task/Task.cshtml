@model IEnumerable<TaskViewModel>

@{
    ViewBag.Title = "All Tasks";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="text-center row">

    <form class="input-group-sm">
        <a class="fs-6 btn btn-success mb-3 p-2 " asp-controller="Task" asp-action="AddTask">Add Task</a>
    </form>

    @foreach (var task in Model)
    {
        <div class="card col-4" style="width: 20rem; ">

            <div class="card-body">

                <h5 class="card-title mt-1">@task.Title</h5>
                <h5 class="card-title mt-1">@task.Description</h5>
                <h5 class="card-title mt-1">@task.DueDate</h5>
                <h5 class="card-title mt-1">@task.Employee.FullName</h5>

            </div>

            <form class="input-group-sm" asp-controller="Task" asp-action="RemoveTask" asp-route-employeeId="@task.Id">
                    <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Remove" />
            </form>

            <a class="fs-6 btn btn-success mb-3 p-2" href="/Task/EditTAsk?id=@task.Id" aria-required="true">Edit</a>

        </div>
    }
</div>

