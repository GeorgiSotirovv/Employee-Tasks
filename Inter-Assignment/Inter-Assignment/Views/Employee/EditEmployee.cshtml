@model EmployeeViewModel

@{
    ViewBag.Title = "Edit Employee";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="EditEmployee" method="post">

            <div hidden>
                <input asp-for="@Model.Id" class="form-control" aria-required="true"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.FullName" class="form-label">Full Name</label>
                <input asp-for="@Model.FullName" class="form-control" aria-required="true" placeholder=""/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Emial" class="form-label">Emial</label>
                <input asp-for="@Model.Emial" class="form-control" aria-required="true" placeholder=""/>
                <span asp-validation-for="Emial" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone number</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder=""/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.MonthlySalary" class="form-label">Monthly Salary </label>
                <input asp-for="@Model.MonthlySalary" class="form-control" aria-required="true" placeholder="Enter valid number"/>
                <span asp-validation-for="MonthlySalary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="EditEmployee" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
